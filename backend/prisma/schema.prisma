generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  phone         String?   @unique
  password      String
  name          String
  plan          Plan      @default(FREE)
  planExpiresAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  pets          Pet[]
  notifications Notification[]
  pushToken     String?
  chatbotInteractions ChatbotInteraction[]
  emergencies         Emergency[]
}

model Emergency {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  petId         String
  pet           Pet       @relation(fields: [petId], references: [id], onDelete: Cascade)
  type          String    // accident, poisoning, illness, lost, aggression
  status        String    @default("ACTIVE") // ACTIVE, RESOLVED, CANCELLED
  latitude      Float?
  longitude     Float?
  resolvedAt    DateTime?
  createdAt     DateTime  @default(now())

  @@index([userId])
  @@index([petId])
  @@index([status])
}

model ChatbotInteraction {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  prompt    String
  response  String   @db.Text
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

model Pet {
  id        String   @id @default(cuid())
  name      String
  species   String
  breed     String?
  birthDate DateTime?
  weight    Float?
  photoUrl  String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  healthRecords HealthRecord[]
  activities    Activity[]
  locations     LocationLog[]
  expenses      Expense[]
  reminders     Reminder[]
  emergencies   Emergency[]

  @@index([userId])
}

model HealthRecord {
  id          String   @id @default(cuid())
  petId       String
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  type        String
  title       String
  date        DateTime
  nextDate    DateTime?
  vetName     String?
  weight      Float?
  temperature Float?
  notes       String?
  status      String   @default("pending")
  createdAt   DateTime @default(now())

  @@index([petId])
}

model LocationLog {
  id        String   @id @default(cuid())
  petId     String
  pet       Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  latitude  Float
  longitude Float
  accuracy  Float?
  battery   Int?
  timestamp DateTime @default(now())

  @@index([petId, timestamp])
}

model Activity {
  id        String   @id @default(cuid())
  petId     String
  pet       Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  type      String
  duration  Int
  date      DateTime
  notes     String?

  @@index([petId])
}

model Expense {
  id          String   @id @default(cuid())
  petId       String
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  userId      String
  category    String
  amount      Decimal  @db.Decimal(10, 2)
  date        DateTime
  description String?

  @@index([userId])
}

model Reminder {
  id              String   @id @default(cuid())
  petId           String
  pet             Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  type            String?
  title           String?
  dueDate         DateTime
  status          String   @default("PENDIENTE")
  isRecurring     Boolean  @default(false)
  frequencyMonths Int?
  createdAt       DateTime @default(now())

  @@index([petId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  type      String   @default("SYSTEM") // SYSTEM, REMINDER, HEALTH
  read      Boolean  @default(false)
  data      Json?
  createdAt DateTime @default(now())

  @@index([userId])
}

enum Plan {
  FREE
  BASIC
  FAMILY
}
